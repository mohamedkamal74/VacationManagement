@model IEnumerable<VacationManagement.Models.Department>

@{
    ViewData["Title"] = "Departments";
}

<h4 class="text-info">الاقسام</h4>

<p>
    <a asp-action="Create" class="btn btn-info">اضافة قسم</a>
</p>
<table class="table">
    <thead>
        <tr>
           
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            
            <th>الاحداث</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            
            <td>
                @Html.ActionLink("تعديل", "Edit", new {  id=item.Id  },htmlAttributes:new{@class="btn btn-info"}) 
                @Html.ActionLink("مسح", "Delete", new {  id=item.Id },htmlAttributes:new{@class="btn btn-danger"})
            </td>
        </tr>
}
    </tbody>
</table>
