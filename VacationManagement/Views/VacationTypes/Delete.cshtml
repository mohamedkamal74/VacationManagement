@model VacationManagement.Models.VacationType

@{
    ViewData["Title"] = "Delete";
}


<h3 class="alert alert-danger">هل ترغب في مسح نوع الاجازة نهائيا ؟</h3>
<div>
    <h4>مسح نوع الاجازة</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.VacationName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VacationName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BackGroundColor)
        </dt>
        <dd class = "col-sm-10" style="color:white;background-color:@Model.BackGroundColor;width:50%">
            @Html.DisplayFor(model => model.BackGroundColor)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NumberDays)
        </dt>
