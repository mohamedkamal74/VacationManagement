@model IEnumerable<VacationManagement.Models.Employee>

@{
    ViewData["Title"] = "Employees";
}

<h4 class="text-info">الموظفين</h4>

<p>
    <a asp-action="Create" class="btn btn-info">اضافة موظف </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VacationBalance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DepartmentId)
            </th>
           
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VacationBalance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Department.Name)
            </td>
            
            <td>
                @Html.ActionLink("تعديل", "Edit", new {  id=item.Id  },htmlAttributes:new{@class="btn btn-success"}) 
                @Html.ActionLink("حزف", "Delete", new { id=item.Id },htmlAttributes:new{@class="btn btn-danger"})
            </td>
        </tr>
}
    </tbody>
</table>
